 <!DOCTYPE html>
 <html lang="en">
 <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
 </head>
 <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="w-full flex justify-end ">
         <a class="bg-red-500 rounded-md px-3 py-2 inline-block mb-5" href="/logout">logout</a>
      </div>

        <h3 class="text-3xl ">
          <span class="font-light" >
            Hello
        </span>
        <%= user.username %> ❤️ </h3>
         <h5 class="text-zinc-500 mb-5">you can create a post.</h5>  

        <form action="/post" method="post">
         <textarea class="pl-2 w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md"placeholder="What's on yous mind" name="content" ></textarea>
         <input class=" px-3 w-35 py-2 bg-blue-800 rounded-md block mt-2" type="submit" value="Create new post">
      </form>

   <div class="posts mt-32">
  <h3 class="text-zinc-600">Your Posts</h3>
  <div class="postcontainer mt-3 flex flex-wrap gap-4">
    
    <% user.posts.forEach(function(post) { %>
      <div class="post w-full md:w-1/3 p-4 mb-4 border-2 border-zinc-700 bg-zinc-800 rounded-md">
        <h4 class="text-blue-500 mb-2">@<%= user.username %></h4>
        <p class="text-sm tracking-tight text-zinc-200 mb-2"><%= post.content %></p>
      <small class="mt-4"><%= Array.isArray(post.likes) ? post.likes.length : 0 %> likes </small>

      
        <div class="btns flex gap-4 mt-1">
          <a class="text-blue-500 hover:underline" href="/like/<%= post._id %>">
            <%= post.likes.indexOf(user._id)===-1 ? "like":"unlike" %>
          </a>
          <a class="text-zinc-400 hover:underline" href="/edit/<%= post._id %>">Edit</a>
        </div>
      </div>
    <% }) %>
  </div>
</div>



      </div>
 </body>
 </html>